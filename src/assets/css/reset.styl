@import url('https://fonts.googleapis.com/css?family=Merriweather+Sans|Noto+Serif|Noto+Serif+SC|PT+Serif|Source+Code+Pro|Ubuntu:400,700&subset=chinese-simplified,japanese')
@import './markdown.styl'

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header,
menu, nav, output, ruby, section, summary,
time, mark, audio, video, input
    margin 0
    padding 0
    border 0
    font-size 100%
    vertical-align baseline
    font-family 'Merriweather Sans','Source Code Pro','Ubuntu','Noto Serif SC','Noto Serif','PT Serif',Microsoft YaHei,monospace,sans-serif,serif
    font-style normal
    font-weight 500
article, aside, details, figcaption, figure,
footer, header, menu, nav, section
    display block
body
    line-height 1
    -webkit-text-size-adjust none
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)
html, body
    width 100%
blockquote, q
    quotes none
    &:before, &:after
        content none
table
    border-collapse collapse
    border-spacing 0
a
    color #7e8c8d
    text-decoration none
    -webkit-backface-visibility hidden
li
    list-style none
::-webkit-scrollbar
    width 4px
    height 4px
    background-color #eee
::-webkit-scrollbar-thumb
    background-color #69d2e7
::-webkit-scrollbar-track
    background-color #eee
.container-content
    padding-bottom 30px
    background-color #FFFFFF
    position relative
    animation main 1s
.v-container
    max-width 850px !important

textarea
    &:-webkit-input-placeholder, &:-moz-placeholder, &:-ms-input-placeholder
        font-size: 16px
        color: red

@keyframes main 
    0%
        opacity 0
        transform translateY(50px)
    
    100%
        opacity 1
        transform: translateY(0)
